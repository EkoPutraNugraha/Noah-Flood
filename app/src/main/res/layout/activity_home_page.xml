<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="16dp">

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat datang!"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Input Kota -->
        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama kota"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonSearchCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cari Cuaca"
            android:layout_marginTop="16dp" />

        <!-- Data Cuaca -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewWeatherCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageViewWeatherIcon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="Ikon Cuaca"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/textViewWeatherTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--Â°C"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewWeatherDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi cuaca"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textViewWeatherPrecipitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Presipitasi: --" />

                <TextView
                    android:id="@+id/textViewWeatherHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelembapan: --%" />

                <TextView
                    android:id="@+id/textViewWeatherWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angin: -- km/h" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cuaca 3 Hari -->
        <TextView
            android:id="@+id/textViewWeatherDay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hari 1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewWeatherDay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hari 2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewWeatherDay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hari 3"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Jarak Sensor -->
        <TextView
            android:id="@+id/textViewDistanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jarak Sensor:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDistanceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- cm"
            android:textSize="32sp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="32dp"
            app:cornerRadius="12dp"
            app:iconPadding="8dp"
            android:backgroundTint="@color/design_default_color_error"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
